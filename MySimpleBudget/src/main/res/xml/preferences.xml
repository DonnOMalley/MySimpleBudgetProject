<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:title="@string/preference_title"
                  android:summary="@string/preference_summary">

    <CheckBoxPreference android:key="preferenceWorkOffline"
                        android:title="@string/preference_work_offline"
                        android:summary="@string/preference_work_offline_summary" />

    <PreferenceScreen android:title="@string/preference_login_title"
                      android:summary="@string/preference_login_summary">

        <EditTextPreference android:key="preferenceValidationServer"
                            android:title="@string/preference_login_server_title"
                            android:summary="@string/preference_login_server_summary" />

        <CheckBoxPreference android:key="preferenceLoginSaveCredentials"
                            android:title="@string/preference_login_save_title"
                            android:summary="@string/preference_login_save_summary" />

        <EditTextPreference android:key="preferenceLoginUserName"
                            android:title="@string/preference_login_username_title"
                            android:summary="@string/preference_login_username_summary"
                            android:dependency="preferenceLoginSaveCredentials" />

        <EditTextPreference android:key="preferenceLoginPassword"
                            android:password="true"
                            android:title="@string/preference_login_password_title"
                            android:summary="@string/preference_login_password_summary"
                            android:dependency="preferenceLoginSaveCredentials" />

    </PreferenceScreen>

</PreferenceScreen>